.some-selector {
  $lineHeight: 1.4;
  $fontSize: 16px;
  $paddingVrt: 10px;
  $lines: 4;
  $height: calc($fontSize * $lineHeight * $lines + $paddingVrt * 2);

  font-size: $height;
  color: black;
  border: 1px solid #fff;

  &:focus {
    background-color: rgba(37, 156, 154, 0.4);
  }
}

.some-selector-1 {
  background-color: transparent;
}
